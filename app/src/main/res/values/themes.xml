<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme -->
    <style name="Theme.MovieInfo" parent="Base.Theme.MovieInfo"/>

    <!--Base custom theme -->
    <style name="Base.Theme.MovieInfo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Color (light theme) -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_900</item>
        <item name="colorSecondary">@color/red_700</item>
        <item name="colorSecondaryVariant">@color/red_900</item>

        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/red_100</item>
        <item name="colorError">@color/red_800</item>

        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>
        <!-- Shape. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MovieInfo.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MovieInfo.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MovieInfo.LargeComponent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_50_alpha_060</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>