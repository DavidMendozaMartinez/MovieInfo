<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme -->
    <style name="Theme.MovieInfo" parent="Base.Theme.MovieInfo" />

    <!--Base custom theme -->
    <style name="Base.Theme.MovieInfo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Color (light theme) -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_900</item>
        <item name="colorSecondary">@color/red_700</item>
        <item name="colorSecondaryVariant">@color/red_900</item>

        <item name="android:colorBackground">@color/white_300</item>
        <item name="colorSurface">@color/white_400</item>
        <item name="colorError">@color/red_800</item>

        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>

        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="colorOnSurfaceAlpha">@color/black_900_alpha_010</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.MovieInfo.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MovieInfo.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MovieInfo.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MovieInfo.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MovieInfo.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MovieInfo.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MovieInfo.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MovieInfo.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MovieInfo.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MovieInfo.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MovieInfo.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MovieInfo.Overline</item>

        <!-- Shape. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MovieInfo.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MovieInfo.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MovieInfo.LargeComponent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_900_alpha_060</item>
    </style>
</resources>